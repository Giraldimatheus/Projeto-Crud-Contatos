@model ContatoModel 

 @{
    ViewData["Title"] = "Criar contato";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button">Adicionar novo contato</a>

    </div>
    <br />

    <h1 class="display3">Cadastrar contato</h1>

</div>

<form asp-controller="Contato" asp-action="Criar" method="post">

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" aria-describedby="Digite o nome do contato">
        @Html.ValidationMessageFor(x =>x.Nome)

    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" aria-describedby="Digite o e-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)

    </div>

    <div class="form-group">
        <label for="Celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" aria-describedby="Digite o celular do contato">
        @Html.ValidationMessageFor(x => x.Celular)

    </div>
  
    <div class="row">
        <div class="col-md-12 mt-3">

    <button type="submit" style="width:100%" class="btn btn-primary btn-block">Adicionar</button>
        </div>
        <div class="col-md-12">

    <a class="btn btn-secundary btn-block" style="width:100%" asp-controller="Contato" asp-action="Index" role="button" >Voltar</a>
        </div>
    </div>  
</form>