@model ContatoModel

@{
    ViewData["Title"] = "Editar contato";
}

<div class="text-center">
    <br />

    <h1 class="display3">Editar contato</h1>

</div>

<form asp-controller="Contato" asp-action="Alterar" method="post">

    <input type="hidden" asp-for="Id"/>

    <div class="form-group">
        <label for="Nome">Nome</label>
        <input type="text" asp-for="Nome" class="form-control" aria-describedby="Digite o nome do contato">
        @Html.ValidationMessageFor(x => x.Nome)

    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" asp-for="Email" class="form-control" aria-describedby="Digite o e-mail do contato">
        @Html.ValidationMessageFor(x => x.Email)

    </div>

    <div class="form-group">
        <label for="Celular">Celular</label>
        <input type="text" asp-for="Celular" class="form-control" aria-describedby="Digite o celular do contato">
        @Html.ValidationMessageFor(x => x.Celular)

    </div>

    <div class="row">
        <div class="col-md-12 mt-3">

            <button type="submit" style="width:100%" class="btn btn-primary btn-block" >Alterar</button>
        </div>
        <div class="col-md-12">

            <a class="btn btn-secundary btn-block" style="width:100%" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
        </div>
    </div>
</form>